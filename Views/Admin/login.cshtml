@model EAD_Term_Project.Models.Admin

@{
    Layout = "~/Views/Shared/adminViewStart.cshtml";
}


<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" id="adminLogin" method="post" action="/Admin/login">
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { placeholder = "Email" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { placeholder = "Password" })
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Login" name="login"/>
                                <!--<a href="index">Login</a>-->
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Admin/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Admin/dist/js/sb-admin-2.js"></script>